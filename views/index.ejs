<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Amtute Homepage</title>
    <link rel="shortcut icon" href="images/Amtute__2_-removebg-preview.png" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-800 h-screen w-screen overflow-auto flex flex-col overflow-x-hidden">
    <!-- Navigation Bar -->
    <%- include('nav.ejs')%>

    <hr class="border-gray-700">

    <!-- Main Content -->
    <main class="h-[90%] flex justify-between items-center px-8 sm:px-4 mt-10 mb-10 ">
        <!-- Left Section -->
        <div class="left w-1/3 text-left">
            <span class="text-white text-5xl sm:text-3xl font-bold leading-tight" id="element">Welcome to</span><br>
            <span class="text-red-600 text-6xl sm:text-4xl font-extrabold leading-tight" id="element2">Amtute</span><br>
            <span class="text-white text-4xl sm:text-3xl font-medium leading-tight" id="element3">Your Trusted Platform</span>
        </div>

        <!-- Center Section -->
        <div class="center w-1/3 flex justify-center">
            <img src="images/Amtute__2_-removebg-preview.png" class="max-h-full object-contain" alt="Center Image">
        </div>

        <!-- Right Section -->
        <div class="right w-1/3 text-right">
            <span class="text-white text-5xl sm:text-3xl font-semibold leading-tight" id="element4">Innovate</span><br>
            <span class="text-white text-5xl sm:text-3xl font-semibold leading-tight" id="element5">Create</span><br>
            <span class="text-yellow-500 text-6xl sm:text-4xl font-bold leading-tight" id="element6">Inspire</span>
        </div>
    </main>

    <footer>
    <%- include('footer.ejs')%>
</footer>
    <script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
    <script src="Javascripts/script.js"></script>
</body>
</html>
